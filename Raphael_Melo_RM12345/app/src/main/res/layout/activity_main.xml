<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/option_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="@dimen/option_value_text_size"
        />

    <Button
        android:id="@+id/option_android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_value"
        app:layout_constraintTop_toBottomOf="@+id/option_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/option_ios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ios_value"
        app:layout_constraintTop_toBottomOf="@+id/option_android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/option_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="----------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_ios"
        android:layout_marginTop="@dimen/margin_medium"
        android:textSize="@dimen/option_selected_text_size"
        />


</androidx.constraintlayout.widget.ConstraintLayout>